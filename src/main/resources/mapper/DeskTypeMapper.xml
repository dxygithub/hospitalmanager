<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyhc.hospitalmanager.dao.DeskTypeMapper">

    <!-- 新增科室类型 -->
    <insert id="addDesk_type">
        INSERT INTO `hospital_test_manager_db`.`desk_type` (
          `desk_type_id`,
          `desk_type_name`
        )
        VALUES
          (
            null ,
            #{deskTypeName}
          );
    </insert>

    <!-- 根据id查询科室类型 -->
    <select id="getDeskTypeById" resultType="com.dyhc.hospitalmanager.pojo.DeskType">
        select * FROM desk_type
        where desk_type_id = #{deskTypeId}
    </select>

    <!-- 修改科室类型 -->
    <update id="updDeskType">
        update desk_type set desk_type_name=#{deskTypeName}
        where desk_type_id = #{deskTypeId}
    </update>

    <!-- 获取所有科室类型 -->
    <select id="getAllDeskTypeList" resultType="com.dyhc.hospitalmanager.pojo.DeskType">
        select * from desk_type
    </select>

    <!-- 删除科室类型 -->
    <delete id="delDeskTypeById">
        delete from desk_type
        where desk_type_id = #{id}
    </delete>
</mapper>